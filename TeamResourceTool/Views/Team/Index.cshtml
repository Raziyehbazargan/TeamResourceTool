@model IEnumerable<TeamResourceTool.Models.Project>

@helper ProjectStatus(string statusName)
{
    if (statusName == "Active")
    {
        <span class="badge badge-success">@statusName</span>
    }
    else if (statusName == "Closed")
    {
        <span class="badge badge-Primary">@statusName</span>
    }
    else
    {
        <span class="badge badge-warning">@statusName</span>
    }
}
<br />
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
    <li class="breadcrumb-item">Dashboard</li>

</ol>
<div class="row">
    <div class="col-md-12">
        <p style="
    font-size:  20px;
    font-weight: 600;">Dashboard</p>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">
                    <i class="fa fa-tasks" aria-hidden="true"></i> Projects
                </h4>
                <h6 class="card-subtitle mb-2 text-muted text-center"></h6>
                <p class="card-text"></p>
            </div>
            <div class="card-footer text-muted text-right">
                <a href="@Url.Action("Index","Project")" class="card-link">View Details</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">
                    <i class="fa fa-users" aria-hidden="true"></i>
                    Resources
                </h4>
                <h6 class="card-subtitle mb-2 text-muted text-center"></h6>
                <p class="card-text"></p>
            </div>
            <div class="card-footer text-muted text-right">
                <a href="#" class="card-link">View Details</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">
                    <i class="fa fa-list-alt" aria-hidden="true"></i> Summary
                </h4>
                <h6 class="card-subtitle mb-2 text-muted text-center"></h6>
                <p class="card-text"></p>
            </div>
            <div class="card-footer text-muted text-right">
                <a href="#" class="card-link">View Details</a>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-8">
        <div class="card bg-light mb-3">
            <div class="card-header"><b>Projects in Build Process</b></div>
            <div class="card-body text-center" style="color: #111;">
                <table class="table table-hover">
                    <thead>
                        <tr class="table-primary">
                            <th colspan="9">Projects</th>
                        </tr>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">BuildStart</th>
                            <th scope="col">Go Live</th>
                            <th scope="col">Days to Deadline</th>
                            <th scope="col">Event Dates</th>
                            <th scope="col">Onsite Demand</th>
                            <th scope="col">Event Location</th>
                            <th scope="col">Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr class="table-Default">
                                    <td><a class="" href="@Url.Action("Details", "Project", new { teamID = item.TeamId, projectId = item.Id })"><b>@item.Name</b></a></td>
                                    <td>@String.Format("{0:MM/dd/yyyy}", item.BuildStart)</td>
                                    <td>@String.Format("{0:MM/dd/yyyy}", item.GoLive)</td>
                                    <td>@(DateTime.Now.Subtract((DateTime)item.GoLive).Days.ToString())</td>
                                    <td>@item.EventDates</td>
                                    <td>@item.NeedOnsiteSupport</td>
                                    <td>@item.EventLocation</td>
                                    <td>@ProjectStatus(item.Status)</td>
                                    <td>@**@</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-light mb-3">
            <div class="card-header"><b>Live Projects</b></div>
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action">
                    Cras justo odio
                </a>
            </div>
        </div>
    </div>
</div>
