@model IEnumerable<TeamResourceTool.Models.Team>

@{
    ViewBag.Title = "Index";
}
@section Scripts
{
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    <script type="text/javascript">

        window.onload = function () {
            var chart = new CanvasJS.Chart("chartContainer", {
                theme: "theme2",
                animationEnabled: true,
                title: {
                    text: " "
                },
                axisX: {
                    title: ""
                },
                axisY: {
                    title: ""
                },
                data: [
                    {
                        type: "stackedColumn100",
                        legendText: "Build",
                        showInLegend: "true",
                        indexLabel: "#percent %",
                        indexLabelPlacement: "inside",
                        indexLabelFontColor: "white",
                        dataPoints: @Html.Raw(ViewBag.BuildDataPoints),
                        //dataPoints: [
                        //    { y: 40, label: "Cafeteria" },
                        //    { y: 10, label: "Lounge" },
                        //    { y: 72, label: "Games Room" }
                        //],
                     },
                    {
                        type: "stackedColumn100",
                        legendText: "Live",
                        showInLegend: "true",
                        indexLabel: "#percent %",
                        indexLabelPlacement: "inside",
                        indexLabelFontColor: "white",
                        dataPoints: @Html.Raw(ViewBag.LiveDataPoints),
                        //dataPoints: [
                        //    { y: 20, label: "Cafeteria" },
                        //    { y: 14, label: "Lounge" },
                        //    { y: 40, label: "Games Room" }
                        //],
                     }
                ]
            });
            chart.render();
        };
    </script>
}
<br/>
<div class="row">
    <div class="col-md-6">
        <div id="chartContainer" style="position: relative; height: 360px; width: 100%;"></div>
    </div>
</div>
<br/>
<hr/>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card text-white bg-secondary mb-3">
                <div class="card-header"></div>
                <div class="card-body text-center" style="color: #111;">
                    <h4 class="card-title">@item.Name</h4>
                    <p class="card-text">
                        @Html.RouteLink(@item.Name, new { action = "Index", controller = "Team", id = item.Id })
                    </p>
                </div>
            </div>
        </div>
    }
</div>


